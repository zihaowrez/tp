<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" spacing="10" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="10" />
                </padding>
                <Label fx:id="nameView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="56.0" prefWidth="280.0" style="-fx-text-fill: black; -fx-font-size: 30; -fx-background-color: transparent;" styleClass="cell_view_title_label" text="\$first">
               <font>
                  <Font size="34.0" />
               </font></Label>
            </HBox>

            <HBox spacing="10">

                <Label fx:id="phoneLabel" prefHeight="26.0" prefWidth="71.0" style="-fx-text-fill: black; -fx-font-size: 20;" styleClass="cell_small_label" text="\$phone">
               <font>
                  <Font size="25.0" />
               </font></Label>
                <Label fx:id="phoneView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="264.0" style="-fx-text-fill: black; -fx-font-size: 16; -fx-background-color: transparent;" styleClass="cell_small_label" stylesheets="@LightTheme.css" text="\$phone" />
            </HBox>

            <HBox spacing="10">
                <Label fx:id="emailLabel" styleClass="cell_small_label" text="\$email">
               <font>
                  <Font size="20.0" />
               </font></Label>

                <Label fx:id="emailView" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="259.0" style="-fx-text-fill: black; -fx-font-size: 16; -fx-background-color: transparent;" styleClass="cell_small_label" stylesheets="@LightTheme.css" text="\$email">
               <font>
                  <Font size="25.0" />
               </font></Label>
            </HBox>

            <VBox spacing="5">
                <Label fx:id="tagsLabel" styleClass="cell_small_label">
               <font>
                  <Font size="20.0" />
               </font></Label>
                <FlowPane fx:id="tags" />
            </VBox>

            <VBox spacing="5">
                <Label fx:id="socialMediaLabel" styleClass="cell_small_label">
               <font>
                  <Font size="20.0" />
               </font></Label>
                <FlowPane fx:id="socialMedias" orientation="VERTICAL"/>
            </VBox>



        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
