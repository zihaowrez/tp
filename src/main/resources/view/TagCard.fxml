<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      HBox.hgrow = "ALWAYS">
    <GridPane HBox.hgrow="ALWAYS">

        <HBox alignment="CENTER_LEFT" minHeight="105" spacing="10" GridPane.columnIndex="0" style="-fx-background-color: #ededed" >
            <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
            </padding>
            <VBox spacing="5">
                <HBox HBox.hgrow="ALWAYS" style="-fx-background-color: #ededed" >
                    <children>
                        <FlowPane fx:id="tags" prefWidth= "630" style="-fx-background-color: #ededed" />
                    </children>
                </HBox>
            </VBox>
        </HBox>

    </GridPane>
</HBox>

